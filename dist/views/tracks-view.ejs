<div class="content-area content-area-custom">
	<% function truncate(string, slicePt) {
			if(string.length < slicePt) {return string;}

			if (!slicePt) {
				return `${string.slice(0, 63)}...`
			} else {
				return `${string.slice(0, slicePt)}...`
			}
			return string;
    } %>
	<section class="row row-custom">

		<div class="col-lg-5 col-md-8 col-sm-12 col-xs-12" style="margin-bottom: 35px;">
			<% data.forEach(function(item, index) { %>
				
			<section class="card" style="margin-bottom: 15px;">
				<div class="card-header card-header-custom"> <%= item.name%> / <%=item.artists[0]%>
				</div><!-- .card-header -->

				<div class="card-block">
					<div class="card-title card-title-custom video-title"><%=item.album%> </div>

					<div class="card-img card-img-custom">
						<section class="track-container">
							<img src="<%=item.album_art[1]["url"]%>">
						</section>
					</div>

					<ul class="" style="list-style-type: none;">
				        <li class="">Release Date: <%=item.release_date%></li>
				        <li class="">Popularity: <%=item.popularity%></li>
    				</ul>
				</div><!-- .card-block -->
			
				<div class="card-footer" style="padding-top: 0px; padding-bottom: 0px;">
					<div style="background-color: #fff; height: 40px; 
  						position: absolute;
  						right: 32px;
  						width: 70px;
  						z-index: 1;"></div>
					
					<audio src="<%=item.preview_url%>" controls></audio>
					<!--<button data-track-id="<%=index%>" class="btn btn-sm">Play/Pause</button>-->
					<span style="float: right; font-weight: 600;"></span>
				</div>

			</section><!-- .card -->
			<% }) %>

		</div>

	</section><!-- .row -->

</div><!-- .content-area -->
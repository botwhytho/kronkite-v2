<div class="content-area content-area-custom">
	<% function truncate(string) {
			if (string.length > 12) {
				return `${string.slice(0, 12)}...`
			}
			return string;
    } %>
	<section class="row row-custom">

		<div class="col-lg-5 col-md-8 col-sm-12 col-xs-12" style="margin-bottom: 35px;">
			<% data.forEach(function(item, index) { %>
				<section class="card" style="margin-bottom: 15px;">
					<div class="card-header card-header-custom"><%=item["ht:approx_traffic"][0]%> searches
				</div><!-- .card-header -->

				<div class="card-block">
					<div class="card-title card-title-custom">
						<%=item["title"][0]%>
					</div>

					<div class="card-img card-img-custom">
						<img src="<%=item["ht:picture"][0]%>">
					</div>

					<div class="card-text card-text-custom">
						<%=item["ht:news_item"][0]["ht:news_item_title"][0]%>
					   <!-- Article snippet begins here... -->
					</div>

				</div><!-- .card-block -->

				<div class="card-footer">
					<a href="#/article?id=<%=index%>" <button class="btn btn-sm">Read More</button></a>
					<span style="float: right; font-weight: 600;"><%=truncate(item["ht:news_item"][0]["ht:news_item_source"][0])%></span>
				</div>

			</section><!-- .card -->


			<% }) %>
			
		</div>

	</section><!-- .row -->

</div><!-- .content-area -->